{
  "manifest_version": 3,
  "name": "Web Crawler - Markdown Converter",
  "version": "1.0.0",
  "description": "Convert web pages to downloadable markdown format",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Convert to Markdown"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "128": "assets/icon-128.png"
  }
}